    "materialTheme.accent": "Orange",
    "workbench.iconTheme": "eq-material-theme-icons-darker",
    "editor.bracketPairColorization.enabled": true,
    // Font and Cursor
    "editor.fontFamily": "FiraCode NF",
    "editor.fontLigatures": true,
    "editor.cursorSmoothCaretAnimation": true,
    "editor.cursorBlinking": "phase",
    // Remote Extension
    "remote.SSH.configFile": "\\\\wsl$\\Ubuntu\\home\\kailas\\.ssh\\config",
    // Terminal
    "terminal.external.windowsExec": "wt",
    "workbench.panel.defaultLocation": "right",
    "terminal.explorerKind": "external",
    // Online Services
    "telemetry.enableTelemetry": false,
    "extensions.autoUpdate": "onlyEnabledExtensions",
    "update.mode": "start",
    // Formatting
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    // Misc
    "extensions.ignoreRecommendations": true,
    "editor.renderControlCharacters": true,
    "workbench.activityBar.visible": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.tabCompletion": "on",
    "editor.minimap.size": "fit",
    // C/C++
    "C_Cpp.autocompleteAddParentheses": true,
    "C_Cpp.default.cStandard": "c17",
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4, AllowShortBlocksOnASingleLine: Empty, AllowShortIfStatementsOnASingleLine: WithoutElse }"
}